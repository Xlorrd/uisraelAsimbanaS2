<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="asimbanaS2.Vistas.calificaciones"
             Title="calificaciones">
    <StackLayout Spacing="1" Padding="20" >

        <Image
             Source="logo.png"
             SemanticProperties.Description="Cute dot net bot waving hi to you!"
             HeightRequest="75"
             HorizontalOptions="Center" />


        <Label
                Text="Sistema de calificaciones"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="Title"
                TextColor="Red"
                HorizontalOptions="CenterAndExpand" />
        
        <StackLayout Orientation="Horizontal" Padding="20">
            <!--<Label
                Text="Notas"
                FontAttributes="Bold" 
                FontSize="25"
                HorizontalOptions="FillAndExpand" />-->
            <Label
                Text="Parcial 1"
                FontAttributes="Bold" 
                FontSize="Title"
                HorizontalOptions="FillAndExpand" />
            <Label
                 Text="Parcial 2"
                 FontAttributes="Bold"                 
                 FontSize="Title"
                 HorizontalOptions="FillAndExpand" />

        </StackLayout>

        <StackLayout Orientation="Horizontal" Padding="20">
            <!--<Label
                Text="Seguimiento"                 
                FontSize="18"
                FontAttributes="Italic" 
                HorizontalOptions="FillAndExpand" />-->
            <Entry x:Name="txtnotaP1" Placeholder="   Nota Seg p1   " FontSize="20" Keyboard="Numeric" HorizontalOptions="StartAndExpand"  HorizontalTextAlignment="Center"></Entry>
            <Entry x:Name="txtnotaP2" Placeholder="   Nota Seg p2   " FontSize="20" Keyboard="Numeric" HorizontalOptions="StartAndExpand"  HorizontalTextAlignment="Center"></Entry>

        </StackLayout>
        <StackLayout Orientation="Horizontal" Padding="20">
            <!--<Label
                Text="Exámen"                 
                FontSize="18"
                 FontAttributes="Italic" 
                HorizontalOptions="FillAndExpand"  />-->
            <Entry x:Name="txtnotaExamen" Placeholder="   Exámen p1   " FontSize="20" Keyboard="Numeric" HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Center"></Entry>
            <Entry x:Name="txtnotaExamen2" Placeholder="   Exámen p2   " FontSize="20" Keyboard="Numeric" HorizontalOptions="StartAndExpand" HorizontalTextAlignment="Center"></Entry>
        </StackLayout>
        <Button
                     x:Name="btnCalcular"
                     Text="Calcular"
                     SemanticProperties.Hint="Counts the number of times you click"
                     Clicked="btnCalcular_Clicked"
                     HorizontalOptions="Center" />
    </StackLayout>
   
